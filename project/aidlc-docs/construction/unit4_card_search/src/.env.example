# Unit4: Card Search & Display Environment Configuration

# Database Configuration (shared with Unit3)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/aidlc_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_SEARCH_CACHE_DB=1
REDIS_SUGGESTION_CACHE_DB=2

# Search Configuration
SEARCH_CACHE_TTL_MY_CARDS=180  # 3 minutes
SEARCH_CACHE_TTL_PUBLIC_CARDS=300  # 5 minutes
SUGGESTION_CACHE_TTL=3600  # 1 hour
POPULAR_TAGS_CACHE_TTL=86400  # 1 day

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
CURSOR_PAGE_SIZE=20

# Full-text Search Configuration
POSTGRES_FTS_LANGUAGE=korean
SEARCH_MIN_QUERY_LENGTH=2
SEARCH_MAX_QUERY_LENGTH=100

# Statistics Configuration
ENABLE_SEARCH_STATISTICS=true
STATISTICS_RETENTION_DAYS=90

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Unit3 Integration
UNIT3_SERVICE_URL=http://localhost:8003
UNIT3_API_KEY=your_unit3_api_key

# JWT Configuration (shared with Unit1)
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
